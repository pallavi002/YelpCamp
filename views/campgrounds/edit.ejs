<%- include('../layout/header.ejs') %>

<h1 class="display-4 p-5 text-center">Edit Campground <%= campground.name %></h1>
<div class="container" style="width: 50%;">
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" description="description" class="form-control" name="campground[description]"><%= campground.description %></textarea>
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input type="text" name="campground[image]" class="form-control" id="image" value="<%= campground.image %>">
      <img src="<%= campground.image%>" width="100%">
    </div>
    <button type="text" class="btn btn-primary btn-block">Submit</button>
  </form>
  <a href="/campgrounds">Go Back</a>

</div>
<%- include('../layout/footer.ejs') %>