<%- include('../layout/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp!</p>
      <div class="list-group">
        <div class="list-group-item active">Info 1</div>
        <div class="list-group-item">Info 2</div>
        <div class="list-group-item">Info 3</div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="img-thumbnail">
        <img src="<%= campDescription.image %>" class="img-responsive" width="100%">
        <div class="p-3">
          <div class="caption-full">
            <h4 class="float-right">$9.00/night</h4>
            <h4><a><%= campDescription.name %></a></h4>
            <p><%= campDescription.description %></p>
          </div>
        </div>
      </div>
      <div class="jumbotron mt-4">
        <div class="text-right">
          <a href="/campgrounds/<%= campDescription._id %>/comments/new" class="btn btn-primary">Add a comment</a>
        </div>
        <hr>
        <% campDescription.comments.forEach( function(comment) { %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>
            <span class="float-right"><i>10 days ago</i></span>
            <p><%= comment.text %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>


<%- include('../layout/footer.ejs') %>